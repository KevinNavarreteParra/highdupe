{
  "name": "highdupe",
  "displayName": "HighDupe",
  "description": "Highlights duplicate words in LaTeX paragraphs",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:latex"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "latex",
        "extensions": [
          ".tex"
        ],
        "aliases": [
          "LaTeX",
          "latex"
        ]
      }
    ],
    "commands": [
      {
        "command": "highdupe.findRepeatedWords",
        "title": "Find Repeat Words"
      },
      {
        "command": "highdupe.toggleChecking",
        "title": "HighDupe: Toggle Continuous Checking"
      }
    ],
    "configuration": {
      "title": "HighDupe",
      "properties": {
        "highdupe.checkInterval": {
          "type": "number",
          "default": 3000,
          "description": "Interval in milliseconds for running checks (default: 3000ms = 3 seconds)",
          "minimum": 500,
          "maximum": 30000
        },
        "highdupe.modules.duplicateWord.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable duplicate word checking"
        },
        "highdupe.modules.duplicateWord.scope": {
          "type": "string",
          "enum": ["line", "paragraph"],
          "default": "paragraph",
          "description": "Scope for duplicate word detection (line or paragraph)"
        },
        "highdupe.modules.duplicateWord.excludeWords.global": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["the", "and", "a", "of", "to", "in", "is", "it", "that", "for"],
          "description": "Global list of words to exclude from duplicate detection"
        },
        "highdupe.modules.duplicateWord.excludeWords.project": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Project-specific words to exclude from duplicate detection"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KevinNavarreteParra/highdupe"
  }

}